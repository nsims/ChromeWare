{
  "manifest_version": 2,

  "name": "ChromeWare",
  "description": "This extension provides a tool to log requests",
  "version": "1.2.1",

  "permissions": [
	"activeTab",
	"tabs",
	"storage",
	"http://www.google.com/",
	"http://promethee.enablon.com/",
	"https://software.enablon.com/*",
	"https://*.enablon.com/*",
	"http://*.enablon.com/*",
	"http://localhost/*",
	"contextMenus"
  ],
  "background":{
	"scripts": ["js/jquery.js", 
				"js/main.js", 
				"js/tabs.js", 
				"js/login.js", 
				"js/crypto/aes.js", 
				"js/crypto/cryptoJSFormatter.js", 
				"js/crypto/lazyCrypt.js", 
				"js/crypto/md5.js", 
				"js/screenshottabs.js", 
				"js/getVersionInfo.js",
				"js/eventPage.js",
				"js/contextmenu.js",
				"js/screenshot.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://software.enablon.com/*"],
      "js": ["js/jquery.js"]
    }
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/ChromeWareIcon.png",
    "default_popup": "index.html"
  },
  "icons": {"48": "images/ChromeWareIcon.png"}
}